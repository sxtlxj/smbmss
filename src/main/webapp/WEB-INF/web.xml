<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>com.kuang.filter.CharacterEncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.kuang.servlet.user.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.kuang.servlet.user.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/jsp/logout.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>updatePwd</servlet-name>
    <servlet-class>com.kuang.servlet.user.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>updatePwd</servlet-name>
    <url-pattern>/jsp/user.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DelUserServlet</servlet-name>
    <servlet-class>com.kuang.servlet.user.DelUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DelUserServlet</servlet-name>
    <url-pattern>/jsp/deluser.do</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>DrugServlet</servlet-name>
    <servlet-class>com.kuang.servlet.user.DrugServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DrugServlet</servlet-name>
    <url-pattern>/jsp/drug.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ListFileServlet</servlet-name>
    <servlet-class>com.kuang.servlet.user.ListFileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListFileServlet</servlet-name>
    <url-pattern>/jsp/ListFileServlet.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>FileServlet</servlet-name>
    <servlet-class>com.kuang.servlet.user.FileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FileServlet</servlet-name>
    <url-pattern>/jsp/upload.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DownLoadServlet</servlet-name>
    <servlet-class>com.kuang.servlet.user.DownloadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DownLoadServlet</servlet-name>
    <url-pattern>/jsp/DownLoadServlet.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>MatchServlet</servlet-name>
    <servlet-class>com.kuang.servlet.user.MatchServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MatchServlet</servlet-name>
    <url-pattern>/jsp/MatchServlet.do</url-pattern>
  </servlet-mapping>


  <filter>
    <filter-name>SysFilter</filter-name>
    <filter-class>com.kuang.filter.SysFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SysFilter</filter-name>
    <url-pattern>/jsp/*</url-pattern>
  </filter-mapping>

  <listener>
    <listener-class>com.kuang.util.MyContextListener</listener-class>
  </listener>


  <display-name>Archetype Created Web Application</display-name>
  <!--设置首页-->
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>

  <!-- 设置Session时间为30min-->
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

</web-app>

<!--李晓天是个废物-->
